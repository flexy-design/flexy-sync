{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": [],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "resolveJsonModule": true,
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "rootDir": "./src",
  },
  "exclude": [
    "node_modules",
    "dist",
    "bin",
    "test-e2e",
    "common"
  ]
}